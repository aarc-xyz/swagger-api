  "paths": {
    "/migrator/balances": {
      "post": {
        "tags": [
          "migrator"
        ],
        "description": "To get the token balances of an address on a specific chain.\n",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "description": "Aarc API Key",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BalancesBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalancesResponse"
                }
              }
            }
          }
        }
      }
    },
